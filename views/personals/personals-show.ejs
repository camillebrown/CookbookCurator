
<h1 class='recipe-title'> <%=personal.name%> </h1>
<div style="height: 50px">
  <a id="view-edit-btn" style="text-decoration: none; color: white;" href="/personals/edit/<%=personal.id%>">EDIT YOUR RECIPE</a>
</div>
<div class="recipe-container">
  <img class='recipe-img' style="width: 600px; margin:auto" src=<%=`${personal.img_url}`%>> 
  <br>
  <ul id="ingredients">
    <h3>Ingredients:</h3>
    <% ingArray.forEach(ingredient=>{ %>
      <li><%=ingredient%></li>
    <% }) %>
  </ul>
  <ol id="instructions">
    <h3>Instructions:</h3>
    <% insArray.forEach(instruction=>{ %>
      <li><%=instruction%></li>
    <% }) %>
  </ol>
</div>  