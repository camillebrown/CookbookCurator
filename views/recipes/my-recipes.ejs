<h1> Favorites:</h1>

<div class='grid3'> 
    <% recipes.forEach((recipe)=>{ %>
        <div class='grid-item'>
            <img class="fav-img" src = "<%=recipe.img_url%>">
            <p><%=recipe.name%></p>
            <a href="/recipes/<%= recipe.recipe_id %>" class="learn-btn" id="btn">Check it Out!</a>
            <form method="POST" action='/recipes/my-recipes/<%= recipe.recipe_id %>/?_method=DELETE'>
                <input hidden type="text" name="name" value="<%=recipe.title%>">
                <input hidden type="text" name="img_url" value="<%=recipe.image%>">
                <input hidden type="text" name="recipe_id" value="<%=recipe.id%>">
                <input type='submit' id="delete" value="Delete from my Cookbook">
            </form>
        </div>
    <% }) %>
</div>